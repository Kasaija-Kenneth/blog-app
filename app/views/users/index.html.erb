<section>
  <ul class="list_users">
  <% @users.each do |user| %>
    <li class="user">
      <div class="user_profile">
        <img src=<%=user.photo%> alt="<%=user.name%>'s image" />
      </div>
      <div class="user_info">
        <h4 class="user_name"><%= link_to user.name, user_path(user) %></h4>
        <p class="user_activity">Number of posts: <%= user.posts_counter %></p>
      </div>
    </li>
    <% end %>
  </ul>
