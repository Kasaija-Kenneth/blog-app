<div class="container">
  <div>
    <div class="user_profile">
      <img src="<%= @user.photo %>" alt="<%= @user.name %>'s image" />
    </div>
    <div class="user_details">
      <h3><%= @user.name %></h3>
      <p>Number of posts: <%= @user.posts_counter %> </p>
    </div>
  </div>

  <% @posts.each do |post| %>
    <div class="posts_container">
      <div class="users_post">
        
          <%=link_to "show post#{@user.id}",user_post_path(@user, post),
            class: "text-decoration-none" %>
         
        
        <p><%= post.text %></p>
        <h4>
                        

        <% if post.comments_counter > 0%>
                  Comments:<%=post.comments_counter %>

        <%else%>
                 <p> Comments:0</p>
<%end%>

          , Likes: <%= post.likes_counter%>
        </h4>
        <%= form_with url: "/users/#{post.author_id}/posts/#{post.id}/likes" do |form| %>
          <%= form.submit "Like Post" %>
        <% end %>
      </div>
      <div class="comments_content">
        <% if post.recent_comments.count.zero? %>
          <p>No comments for this post </p>
          <% else %>
            <% post.comments.last(5).each do |comment| %>
            <p><%= comment.user.name %>: <%= comment.text %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  <button class="pagination">Pagination</button>
</div>