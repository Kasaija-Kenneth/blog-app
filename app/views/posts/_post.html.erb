<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.Title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= post.Text %>
  </p>

  <p>
    <strong>Comments counter:</strong>
    <%= post.CommentsCounter %>
  </p>

  <p>
    <strong>Likes counter:</strong>
    <%= post.LikesCounter %>
  </p>

</div>
